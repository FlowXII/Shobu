{
    "version": 2,
    "builds": [
      {
        "src": "back/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "front/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "back/server.js"
      },
      {
        "src": "^/assets/(.*)",
        "dest": "/front/dist/assets/$1"
      },
      {
        "src": "^/service-worker.js",
        "dest": "/front/dist/service-worker.js"
      },
      {
        "src": "^/manifest.json",
        "dest": "/front/dist/manifest.json"
      },
      {
        "src": "^/(.*)\\.(.+)",
        "dest": "/front/dist/$1.$2"
      },
      {
        "src": "/(.*)",
        "dest": "back/server.js"
      }
    ]
  }
