{
        "version": 2,
        "builds": [
          {
            "src": "front/package.json",
            "use": "@vercel/node",
            "config": {
              "buildCommand": "npm install && npm run build"
            }
          },
          {
            "src": "back/package.json",
            "use": "@vercel/node",
            "config": {
              "buildCommand": "npm install"
            }
          }
        ],
        "routes": [
          {
            "src": "/api/(.*)",
            "dest": "back/server.js"
          },
          {
            "handle": "filesystem"
          },
          {
            "src": "/(.*)",
            "dest": "front/dist/index.html"
          }
        ]
      }